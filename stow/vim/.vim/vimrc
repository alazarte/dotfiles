let $RTP=split(&runtimepath, ',')[0]

filetype plugin indent on
syntax on

set showcmd
set path=.,**
set grepprg=grep\ -nI\  
set incsearch
set wildmenu " wildmode=list
" set noswapfile
set lcs=trail:-,nbsp:+,eol:$

colorscheme default
set background=dark

au BufNewFile,BufRead *.ppt,*.ppt setf ppt

map <leader>s :setlocal spell! spelllang=en<cr>
