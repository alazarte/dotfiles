let $RTP=split(&runtimepath, ',')[0]

filetype plugin indent on
syntax on

set showcmd
set path=.,**
set grepprg=grep\ -n\  
set incsearch
set wildmenu
set noswapfile

" setting these options globally, and modified them for each specific filetype
set noexpandtab
set tabstop=8
set nofoldenable

colorscheme default
set background=dark

map <leader>s :setlocal spell! spelllang=en_us<cr>
