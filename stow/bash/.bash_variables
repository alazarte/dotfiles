# PATH
export PATH=$HOME/bin:$PATH
export PATH=$HOME/docker/bin:$PATH
export PATH=$HOME/src/go/bin:$PATH

# default
export EDITOR=vim
export TERMINAL=st
export BROWSER=librewolf

# auth ssh using gpg
export GPG_TTY=$(tty)
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)

# some program's config
export MANWIDTH=80
export TERM=tmux-256color
export HISTORY_LENGTH=2000

# paths
export MAILPATH=/var/spool/mail/inbox
export DOTREMINDERS=$XDG_CONFIG_HOME/remind
export XDG_DATA_HOME=$HOME/.data

# cool prompt
color=32
export PS1='$(exitcode=$?; [ $exitcode -ne 0 ] && color=31 && exitcode_str="[$exitcode]"; printf "\W \[\e[;${color}m\]$exitcode_str\$ \[\e[m\]")'

# delete
export LAPTOP_OUTPUT=eDP-1
export SCREEN_OUTPUT=DP-2-2
export DEFAULT_SINK_ID=1

